  .viewfinder
    padding: 25px 0
    position: relative
    width: 100%
    z-index: 1

    .handle
      position: absolute
      top: 20px
      bottom: 20px
      border-color: #5f80a0
      border-style: solid
      border-width: 0
      z-index: 1
      cursor pointer

      &::before
        content: ''
        position: absolute
        top: 0
        left: 0
        right: 0
        bottom: 0
        background-color: black
        opacity: 0.75

      &::after
        content: ''
        position: absolute
        width: 20px
        height: 20px
        border-radius: 50%
        background-color: #5f80a0
        cursor: pointer
        z-index: 3

      &.left
        border-right-width: 1px
        left: 0

        &::after
          top: -20px
          right: -10px

      &.right
        border-left-width: 1px
        right: 0

        &::after
          bottom: -20px
          left: -10px

    .snappingpoints
      position: relative
      text-align: left
      left: 1px

      .snap
        display: inline-block
        height: 5px
        border-right: 1px solid grey
