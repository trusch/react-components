@import '../../app/app.styl'

.graph-container
  margin-top $navigation-padding

  canvas
    width 100%!important

  .chart-header
    margin-bottom $navigation-padding

    h2
      & > span
        color $disabled-gray
        font-size 30px
        font-weight bold

        & + span
          font-size 0.875em
          font-weight normal

  .time-switcher
    margin-top 10px
    margin-bottom $navigation-padding
    padding-bottom $navigation-padding
    text-align right

    display none

    button
      background-color $dark-crystal
      border 0
      color $primary-crystal
      width $icon-size
      height auto
      line-height $icon-size
      padding 0

    .counter
      display inline-block
      background-color $dark-crystal
      color white
      line-height $icon-size
      padding 0 6px
      margin 0 $navigation-padding

  .chart-legend
    margin-top $navigation-padding
    margin-bottom "calc(%s * 2)" % $navigation-padding
    clearfix()

    ul
      width 100%
      height 150px
      clearfix()

      li
        display block
        color white
        width 50%
        float left
        padding-bottom 5px

        @media screen and (min-width: $screen-md-min)
          width 25%

        @media screen and (min-width: $screen-sm-min)
          width 20%

        .color-bullet
          background-color pink
          border-radius 5px
          display inline-block
          height $bullet-square
          margin-right "calc(%s / 2)" % $navigation-padding
          width $bullet-square

          &.blue
            background-color #25BDFF

          &.red
            background-color #ea1f74

          &.gold
            background-color #FFB100

          &.crystal
            background-color #7894AF

          &.green
            background-color #CCAD8F

  .chart-switcher
    margin-top $navigation-padding
    text-align right
    color $dark-crystal

    p, .switch
      display inline-block

    p
      line-height $chart-switcher-square
      margin-right $navigation-padding

.switch
  position relative

  input
    &.cmn-toggle-round
      background-color transparent
      border 0
      border-radius $chart-switcher-square
      height $chart-switcher-square
      margin 0
      width $chart-switcher-width

      & + label

        &::before,
        &::after
          display block
          position absolute
          top 0
          left 0
          bottom 0
          content ""
          height $chart-switcher-square

        &::after
          width $chart-switcher-square

        &::before
          width $chart-switcher-width

  input.cmn-toggle-round + label:before
      right 1px
      background-color #f1f1f1
      border-radius $chart-switcher-square
      transition background 0.4s

  input.cmn-toggle-round + label:after
      width $chart-switcher-square
      background-color #fff
      border-radius 100%
      box-shadow 0 2px 5px rgba(0, 0, 0, 0.3)
      transition margin 0.4s

  input.cmn-toggle-round:checked + label:before
      background-color #8ce196

  input.cmn-toggle-round:checked + label:after
      margin-left $chart-switcher-square


.wrapper-dropdown
    position relative
    width 100px
    padding 3px 10px
    margin 0 0 0 30px
    background #9bc7de
    color #fff
    outline none
    cursor pointer
    font-weight bold
    float right
    text-align: left
    z-index: 2

    &::after
      content ""
      position absolute
      top 50%
      right 16px
      width 0
      height 0
      margin-top -6px
      border-width 6px 0 6px 6px
      border-style solid
      border-color transparent #FFFFFF
      transform: rotate(90deg)

    .dropdown
      position absolute
      top 100%
      left 0
      right 0
      background #fff
      font-weight normal
      height: 0
      overflow: hidden

      &.open
        height: auto

      li
        display block
        color #9e9e9e
        padding 5px 10px

        &.selected
          background #f3f8f8

        &:hover
          background #f3f8f8
