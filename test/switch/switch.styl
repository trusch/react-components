@import '../../app/app.styl'

$width  = 50
$height = 20
$animation = .28s cubic-bezier(0.4,0,.2,1)

switch
  margin: 10px
    
  &.vertical
    display: block

  &.horizontal
    display: inline-block

  &.disabled
    opacity: 0.5

    .switch-label
      &:active::before
        box-shadow: none

  p 
    display inline-block
    line-height ($height)px
    vertical-align middle
    color: $font-color-active

    &.left
      margin 0 10px 0 0
      
    &.right
      margin 0 0 0 10px

  .switch-label
    display inline-block
    position relative
    width ($width +4)px
    height ($height +4)px
    margin: 0
    border-radius ($width/2 +2)px
    border: 1px solid $font-color-active
    transition background $animation
    vertical-align middle
    cursor pointer

    &::before
      content ''
      position absolute
      top 1px
      left 1px
      width ($height)px
      height ($height)px
      background $font-color-active
      box-shadow 0 2px ($height/2)px rgba(0,0,0,.28)
      border-radius 50%
      transition all $animation

    &:active::before
      box-shadow 0 2px ($height)px rgba(black, .28),
                 0 0 0 ($height)px rgba($font-color-active, .2)

  input:checked + .switch-label
    &::before
      left ($width - $height +1)px
      background $scale-active-color

    &:active::before
      box-shadow 0 2px ($height)px rgba(black, .28),
                 0 0 0 ($height)px rgba($scale-active-color, 0.25)

  &.equal
    .switch-label
      &::before
        background $scale-active-color

