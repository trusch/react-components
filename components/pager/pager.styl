.pager

  display none

  .label
    color: white
    display none

  button
    width: 44px;
    height: 44px
    // margin-top: 10px
    // margin-bottom: 10px
    position relative
    padding: 0
    color: #7894af
    background-color #7894af
    top 53px

    &:focus
      color: #7894af
      background-color: #7894af

    &:hover
      color: #5f80a0
      background-color: #5f80a0

    &.disabled
      color:  #666
      background-color: #666

      &::after
        border-color: #555

    &::after
      content: ''
      position: absolute
      top: "calc(50% - %s)" % 10px
      width: 20px
      height: 20px
      border-color: white
      border-style: solid
      transform: rotate(45deg)

    &.left

      &::after
        right: "calc(50% - %s)" % 15px
        border-width: 0 0 2px 2px

    &.right

      &::after
        left: "calc(50% - %s)" % 15px
        border-width: 2px 2px 0 0
