@import '../../app/app.styl'

button
  border 1px solid $primary-crystal
  background-color transparent
  border-radius $default-border-radius
  color $button-font-color
  font-size $button-font-size
  font-weight bold
  height $button-height
  margin-bottom $main-line-height
  width 100%

  &:hover
    background-color lightness($primary-crystal, 50%)
    color $button-font-color

  &:active,
  &:focus
      box-shadow 0 0 6px 0 $primary-crystal
      color $button-font-color
      outline 0

  &.disabled
    background-color transparent!important
    color lightness($disabled-gray, 50%)
    cursor not-allowed
    opacity 0.3

  &.error
    background-color $primary-red
    color $primary-white


  span
    margin: 0 10px
    height: $button-height - 2px

    &.glyphicon
      &:before
        position: relative
        top: 26%

    &:not(.glyphicon)
      display: inline-block
      position: relative
      vertical-align: top

      img
        position: relative
        top: 50%
        transform: translateY(-50%)
  
  .text
    line-height $button-height - 2px

  & > span
    color $primary-crystal

  &:hover:not(.disabled)
    & > span
      color $dark-crystal

  &:active,
  &:focus,
  &.selected
    & > span
      color $primary-red
